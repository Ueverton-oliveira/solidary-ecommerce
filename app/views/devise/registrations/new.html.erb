<%= simple_form_for(resource, html: { class: 'login-form'}, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="text-center">
    <%= f.error_notification %>
    <%= render 'devise/shared/error_messages' %>
  </div>

  <div class="form-inputs">
    <%= f.input :name, label: false, placeholder: 'Nome' %>
    <%= f.input :phone, input_html:{ class: "mask-phone" }, label: false, placeholder: 'Telefone' %>
    <%= f.input :cnpj, input_html:{ class: "mask-cnpj" }, label: false, placeholder: 'CNPJ apenas para usuário Administrativo' %>
    <%= f.input :cpf, input_html:{ class: "mask-cpf" }, label: false, placeholder: 'CPF' %>
    <%= f.input :date_birth, input_html:{ class: "mask-date" }, label: false, placeholder: 'Data de Nascimento' %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                label: false,
                placeholder: 'E-mail',
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                label: false,
                placeholder: "senha no mínimo de #{@minimum_password_length} caracteres",
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                label: false,
                placeholder: 'Confirmar senha',
                input_html: { autocomplete: "new-password" } %>
  </div>

  <%= render 'devise/shared/button_submit', f: f, text: 'Cadastrar' %>
<% end %>

<div class="form-group d-md-flex">
  <div class="w-100 text-md-right">
    <%= render "devise/shared/links" %>
  </div>
</div>
